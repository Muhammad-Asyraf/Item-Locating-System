{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest/globals": true
  },
  "plugins": ["jest", "prettier"],
  "extends": ["airbnb-base", "plugin:jest/all", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "off",
    "comma-dangle": ["error", "only-multiline"],
    "jest/prefer-expect-assertions": [
      "warn",
      { "onlyFunctionsWithAsyncKeyword": true }
    ],
    "arrow-body-style": ["error", "always"],
    "camelcase": "off"
  }
}
